{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
